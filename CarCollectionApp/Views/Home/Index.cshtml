@{
    ViewData["Title"] = "Car Collection";
}

<h1 class="text-center my-4">Welcome to Car Collection</h1>
<p class="text-center">Find your dream car from our exclusive collection</p>

<h2 class="text-center my-4">Featured Cars</h2>
<div class="container">
    <div class="row">
        @foreach (var car in new Dictionary<string, string>
        {
        { "bmw-m4", "BMW M4" },
        { "audi-r8", "Audi R8" },
        { "mercedes-amg-gt", "Mercedes-AMG GT" }
        })
        {
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <img src="~/images/@(car.Key).jpg" class="card-img-top img-fluid" style="height: 300px; object-fit: cover;" alt="@car.Value">
                    <div class="card-body text-center">
                        <h5 class="card-title">@car.Value</h5>
                        <p class="card-text">Luxury performance coupe with a powerful engine.</p>
                        <a href="@Url.Action("CarDetails", "Home", new { car = car.Key })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<h2 class="text-center my-5">Rental & Purchase Options</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card p-4 shadow">
                <h4 class="text-center">Rental Prices</h4>
                <ul class="list-unstyled text-center">
                    <li><strong>BMW M4:</strong> €150/day</li>
                    <li><strong>Audi R8:</strong> €200/day</li>
                    <li><strong>Mercedes-AMG GT:</strong> €220/day</li>
                </ul>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card p-4 shadow">
                <h4 class="text-center">Purchase Prices</h4>
                <ul class="list-unstyled text-center">
                    <li><strong>BMW M4:</strong> €85,000</li>
                    <li><strong>Audi R8:</strong> €150,000</li>
                    <li><strong>Mercedes-AMG GT:</strong> €130,000</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Customer Reviews Section -->
<section id="reviews" class="container mt-5">
    <h2 class="text-center my-4">Customer Reviews</h2>
    <div class="row">
            @foreach (var review in ViewBag.Reviews)
            {
                <div class="col-md-6">
                    <div class="card p-3 shadow">
                        <h5 class="text-center">@review.Name</h5>
                        <p class="text-center">@review.ReviewText</p>
                    </div>
                </div>
            }


    </div>
</section>

<!-- Assistance Section -->
<section id="assistance" class="container mt-4 text-center">
    <h4>Need Assistance?</h4>
    <p>If you need help or a refund, please contact our <a href="@Url.Action("Contact", "Home")">support team</a>.</p>
</section>
